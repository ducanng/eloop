<section class="py-0 ux-section bg-light">
    <div class="container mt-5 mb-5">
        <div class="row d-flex align-items-center justify-content-content">
            <h1 class="display-4 fw-bold mb-5 text-center">Các sản phẩm từ thiện</h1>
            {{#each charityList}}
            <div class="col-lg-auto ">
                <div class="media" id="store">
                    <div class="col-lg-4 col-md-6 col-sm-6 mt-5 mb-5 mr-5 ms-5">
                        <img src="{{charityImageURL}}" class="img-fluid" alt="{{charityName}}" height="400px" width="400px">
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 mt-5 me-5">
                        <div class="media-body">
                            <h2 class="display-3 text-center">{{charityName}}</h2>
                            <p>{{ charityDescription}}</p>
                        </div>

                        <div class="d-flex justify-content-center">
                            <button class="learn-more">
                                <a href="#">
                                    <span class="circle" aria-hidden="true">
                                        <span class="icon arrow"></span>
                                    </span>
                                    <span class="button-text">{{charityPhoneNum}}</span>
                                </a>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
</section>