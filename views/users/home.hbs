<section class="py-5 bg-warning bg-dark" id="home">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-md-5 col-lg-5 order-0 order-md-0 mt-8 mt-md-0">
                <a class="img-landing-banner" href="#!"><img class="img-fluid" src="/images/HDA TEAM.png"
                        alt="HDA TEAM" /></a>
            </div>
            <div class="col-md-7 col-lg-5 text-md-start">
                <h1 class="display-4 fw-bold text-light">Welcome to the<br><span class="text-info">Convinient
                        MENU</span></h1>
                <p class="lead text-white">This is a simple hero unit, a simple jumbotron-style component for calling
                    extra attention to featured content or information.</p>
                <button class="learn-more">
                    <a href="#">
                        <span class="circle" aria-hidden="true">
                            <span class="icon arrow"></span>
                        </span>
                        <span class="button-text">Learn More</span>
                    </a>
                </button>
            </div>
        </div>
    </div>
</section>

<section class="py-0 ux-section bg-light">
    <div class="container mt-5 mb-5">
        <div class="row d-flex align-items-center justify-content-content">
            <h1 class="display-4 fw-bold mb-5 text-center">Cửa hàng tiện lợi</h1>
            {{#each storeList}}
            <div class="col-lg-auto ">
                <div class="media" id="store">
                    <div class="col-lg-4 col-md-6 col-sm-6 mt-5 mb-5 mr-5 ms-5">
                        <img src="/images/store.jpg" class="img-fluid" alt="" height="400px" width="400px">
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 mt-5 me-5">
                        <div class="media-body">
                            <h2 class="display-3 text-center">{{name}}</h2>
                            <p>{{ introduction}}</p>
                        </div>

                        <div class="d-flex justify-content-center">
                            <button class="learn-more">
                                <a href="#">
                                    <span class="circle" aria-hidden="true">
                                        <span class="icon arrow"></span>
                                    </span>
                                    <span class="button-text">Xem sản phẩm</span>
                                </a>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
</section>