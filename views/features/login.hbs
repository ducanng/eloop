<div class="container">
  <ul class="nav">
    <li onclick="showLogin()">Đăng nhập</li>
    <li onclick="showSignup()">Đăng ký</li>
    <li onclick="showForgotPassword()">Quên mật khẩu</li>
    <li onclick="showSubscribe()">Theo dõi</li>
    <li onclick="showContactUs()">Liên hệ</li>
  </ul>
</div>

  <script>
    function onSuccess(googleUser) {
      console.log('Logged in as: ' + googleUser.getBasicProfile().getName());
    }
    function onFailure(error) {
      console.log(error);
    }
    function renderButton() {
      gapi.signin2.render('my-signin2', {
        'scope': 'profile email',
        'width': 285,
        'height': 40,
        'longtitle': true,
        'theme': 'dark',
        'onsuccess': onSuccess,
        'onfailure': onFailure
      });
    }
  </script>

<div class="wrapper">  
  <div class="rec-prism">
  
    <div class="face face-top">
      <div class="content">
        <h2>Theo dõi</h2>
        <small>Enter your email so we can send you the latest updates!</small>
        <form onsubmit="event.preventDefault()">
          <div class="field-wrapper">
            <input type="text" name="email" placeholder="email">

            <label>e-mail</label>
          </div>
          <div class="field-wrapper">
            <input type="submit" onclick="showThankYou()" value="Gửi">
          </div>
        </form>
      </div>
    </div>
    <div class="face face-front">
      <div class="content">
        <h2>Đăng nhập</h2>
        <form name="form0" action="/user/login" method="post">
          <form onsubmit="event.preventDefault()">
            <div class="field-wrapper">
              <input type="text" name="usermail" placeholder="useremail">
              <label>Tài khoản</label>
            </div>
            <div class="field-wrapper">
              <input type="password" name="password" placeholder="password" autocomplete="new-password">
              <label>Mật khẩu</label>
            </div>
            <div class="field-wrapper">
              <input type="submit" onclick="showThankYou()" value="Gửi">
            </div>
            <span class="psw" onclick="showForgotPassword()">Quên mật khẩu? </span>
            <span class="signup" onclick="showThankYou()">Bạn chưa có tài khoản? Đăng ký</span>
          </form>
        </form>
      </div>
    </div>
    <div class="face face-back">
      <div class="content">
        <h2>Bạn quên mật khẩu?</h2>
        <small>Enter your email so we can send you a reset link for your password</small>
        <form onsubmit="event.preventDefault()">
          <div class="field-wrapper">
            <input type="text" name="email" placeholder="email">
            <label>e-mail</label>
          </div>

          <div class="field-wrapper">
            <input type="submit" onclick="Login()" value="Gửi">
          </div>
        </form>
      </div>
    </div>
    <div class="face face-right">
      <div class="content">
        <h2>Đăng kí</h2>
        <form name="form1" action="/user/signup" method="post">
          <form onsubmit="event.preventDefault()">

            <div class="field-wrapper">
              <input type="text" id="useremail" name="email" placeholder="example@gmail.com">
              <label>example@gmail.com</label>
            </div>
            {{!-- <h6 id="error" style="color: red; font-size:0.75em;margin-top:15px"></h6> --}}
            <div class="field-wrapper">
              <input type="password" name="password" placeholder="password" autocomplete="new-password">
              <label>Mật khẩu</label>
            </div>
            <div class="field-wrapper">
              <input type="password" name="password2" placeholder="password" autocomplete="new-password">
              <label>Nhập lại mật khẩu</label>
            </div>
            <div class="field-wrapper">
              {{!-- <input type="submit" onclick="showThankYou()" value="Gửi"> --}}
              <input type="submit" onclick="validateEmail(document.form1.email)" value="Gửi">
            </div>
            <span class="signin" onclick="showLogin()">Đã có tài khoản? Đăng nhập</span>
          </form>
        </form>
      </div>
    </div>
    <div class="face face-left">
      <div class="content">
        <h2>Liên hệ</h2>
        <form onsubmit="event.preventDefault()">
          <div class="field-wrapper">
            <input type="text" name="name" placeholder="name">
            <label>Họ Tên</label>
          </div>
          <div class="field-wrapper">
            <input type="text" name="email" placeholder="email">
            <label>e-mail</label>
          </div>
          <div class="field-wrapper">
            <textarea placeholder="your message"></textarea>
            <label>Vui lòng viết lời nhắn</label>
          </div>
          <div class="field-wrapper">
            <input type="submit" onclick="showThankYou()" value="Gửi">
          </div>
        </form>
      </div>
    </div>
    <div class="face face-bottom">
      <div class="content">
        <div class="thank-you-msg">
          {{message}}
        </div>
      </div>
    </div>
  </div>
</div>
